{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
        <section class="books">
            <div class="flex flex-wrap w-full mb-8">
                <div class="lg:w-1/2 w-full mb-6 lg:mb-0">
                    <h2 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-900">The books you will love</h2>
                    <div class="h-1 w-20 bg-blue-500 rounded"></div>
                </div>
            </div>
            <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                {% for book in books %}
                    <li class="border rounded-lg p-4 shadow-md hover:shadow-lg bg-gray-100 text-center">
                        <img src="https://dummyimage.com/96x128" alt="Book cover" class="w-24 h-32 mx-auto mb-2">
                        <h3 class="text-lg font-bold text-gray-800">{{ book.title }}</h3>
                        <p class="text-gray-600 mb-2">{{ book.author.name}} </p>
                        <a href="{{ path('app_book_show', {id: book.id}) }}" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Read more</a>
                    </li>
                {% endfor %}
            </ul>
        </section>
{% endblock %}
