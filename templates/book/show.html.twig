{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <div class="container mx-auto py-8 px-4">
        <div class="flex flex-col md:flex-row gap-4 items-center">
            <img src="https://dummyimage.com/100x100" alt="Book cover" class="h-48 w-48 object-cover rounded shadow-md">
            <div class="flex flex-col md:w-2/3">
                <h1 class="text-3xl font-bold mb-2">{{ book.title }}</h1>
                <a class="text-gray-600" href="{{ path('app_author_show', {id: book.author.id}) }}">By {{ book.author.name }}</a>
                <a class="text-gray-600" href="{{ path('app_genre_show', {id: book.genre.id}) }}">Genre {{ book.genre.title }}</a>
{#                <a class="text-gray-600" href="{{ path('app_genre_show', {id: book.genre.id}) }}">Genre: {{ book.genre.title }}</a>#}
                <p class="text-gray-600" >ISBN: {{ book.isbn }}</p>
            </div>
        </div>
        <section class="mt-8 pt-4">
            <h2 class="text-2xl font-medium mb-2">Description</h2>
            <p class="text-gray-600">{{ book.description }}</p>
        </section>
    </div>
{% endblock %}
